{
  "name": "@uncovertruth/userdive-tag-paster",
  "description": "debugger",
  "version": "0.2.0",
  "author": "UNCOVER TRUTH Inc.",
  "bugs": {
    "url": "https://github.com/uncovertruth/userdive-tag-paster/pulls"
  },
  "dependencies": {
    "preact": "8.3.1"
  },
  "devDependencies": {
    "@types/chrome": "0.0.72",
    "@types/gulp": "4.0.5",
    "@types/gulp-load-plugins": "0.0.31",
    "@types/gulp-size": "2.1.1",
    "@types/jest": "23.3.1",
    "@types/node": "9.6.31",
    "@types/sinon-chrome": "2.2.4",
    "@uncovertruth/eslint-config": "4.5.0",
    "@uncovertruth/eslint-config-react": "4.4.0",
    "@uncovertruth/stylelint-config": "4.4.0",
    "@uncovertruth/tslint-config": "4.5.0",
    "codecov": "3.0.4",
    "css-loader": "0.28.11",
    "eslint": "5.5.0",
    "eslint-plugin-jest": "21.22.0",
    "faker": "4.1.0",
    "gulp": "3.9.1",
    "gulp-chrome-manifest": "0.0.13",
    "gulp-load-plugins": "1.5.0",
    "gulp-size": "3.0.0",
    "gulp-zip": "4.2.0",
    "husky": "0.14.3",
    "imagemin-cli": "3.0.0",
    "jest": "23.4.2",
    "lint-staged": "7.2.2",
    "main-bower-files": "2.13.1",
    "mock-local-storage": "1.0.5",
    "npm-run-all": "4.1.3",
    "preact-render-to-string": "3.8.2",
    "prettier-eslint-cli": "4.7.1",
    "rimraf": "2.6.2",
    "run-sequence": "2.2.1",
    "sinon-chrome": "2.3.2",
    "style-loader": "0.23.0",
    "stylelint": "9.5.0",
    "then-chrome": "1.0.7",
    "ts-jest": "23.1.4",
    "ts-loader": "4.5.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "2.9.2",
    "typescript-eslint-parser": "16.0.1",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.17.1",
    "webpack-cli": "3.1.0"
  },
  "homepage": "https://github.com/uncovertruth/userdive-tag-paster#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.(ts|tsx)"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": true
  },
  "keywords": [],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "tslint --fix",
      "git add"
    ],
    "*.css": [
      "prettier --write --parser postcss",
      "stylelint --fix",
      "stylelint",
      "git add"
    ]
  },
  "main": "n/a",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/uncovertruth/userdive-tag-paster.git"
  },
  "scripts": {
    "b:gulp": "gulp build",
    "b:html": "cp ./app/*.html dist/",
    "b:images": "imagemin app/images/*.png --out-dir=dist/images/",
    "b:webpack": "webpack -p --env production",
    "build": "run-s clean b:webpack b:images b:html b:gulp",
    "clean": "rimraf dist app/scripts package coverage __tests__/*.js",
    "coverage": "codecov -f ./coverage/lcov.info",
    "lint": "run-p lint:*",
    "lint:css": "stylelint app/styles/*.css",
    "lint:ts": "tslint '{app,__tests__}/**/*.ts'",
    "precommit": "lint-staged",
    "release": "gulp package",
    "tag": "uglifyjs app/tag.js -m",
    "test": "jest"
  }
}
